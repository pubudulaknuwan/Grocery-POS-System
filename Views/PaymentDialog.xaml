<Window x:Class="VillageSmartPOS.Views.PaymentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment" Height="450" Width="500" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        KeyDown="PaymentDialog_KeyDown">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="ðŸ’³ Payment Details" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Total Amount -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Total Amount:" FontWeight="SemiBold" FontSize="14"/>
            <TextBlock Grid.Column="1" Text="{Binding TotalAmount}" FontWeight="Bold" FontSize="14" Foreground="#2E7D32"/>
        </Grid>
        
        <!-- Loan Customer Section -->
        <Border Grid.Row="2" Background="#E8F5E8" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="ðŸ’° Loan Customer Payment" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <!-- Customer ID Input -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Customer ID:" FontWeight="SemiBold" FontSize="14"/>
                    <TextBox Grid.Column="1" Text="{Binding LoanCustomerId, UpdateSourceTrigger=PropertyChanged}" 
                             Width="120" FontSize="14" Padding="5"/>
                </Grid>
                
                <!-- Customer Details Display -->
                <Border Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,10" 
                        Visibility="{Binding CustomerDetailsVisibility}">
                    <StackPanel>
                        <TextBlock Text="{Binding CustomerName}" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding CustomerPhone}" FontSize="12" Margin="0,0,0,3"/>
                        <TextBlock Text="{Binding CustomerAddress}" FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding CurrentBalanceText}" FontWeight="SemiBold" FontSize="12" 
                                   Foreground="#2E7D32" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding NewBalanceText}" FontWeight="SemiBold" FontSize="12" 
                                   Foreground="#FF6F00"/>
                    </StackPanel>
                </Border>
                
                <!-- Pay as Loan Button -->
                <Button Content="ðŸ’³ Pay as Loan" 
                        Command="{Binding PayAsLoanCommand}"
                        Background="#2E7D32" Foreground="White" 
                        FontWeight="Bold" Padding="10" Margin="0,5,0,0"
                        Visibility="{Binding PayAsLoanButtonVisibility}"/>
            </StackPanel>
        </Border>
        
        <!-- Regular Payment Section -->
        <Border Grid.Row="3" Background="#F5F5F5" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="ðŸ’µ Cash Payment" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <!-- Paid Amount Input -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Paid Amount:" FontWeight="SemiBold" FontSize="14"/>
                    <TextBox Grid.Column="1" Text="{Binding PaidAmount, UpdateSourceTrigger=PropertyChanged}" 
                             Width="120" FontSize="14" Padding="5"/>
                </Grid>
                
                <!-- Balance -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Balance:" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock Grid.Column="1" Text="{Binding BalanceAmount}" FontWeight="Bold" FontSize="14" 
                               Foreground="{Binding BalanceColor}"/>
                </Grid>
                
                <!-- Confirm Cash Payment Button -->
                <Button Content="ðŸ’µ Confirm Cash Payment" 
                        Style="{StaticResource NavigationButton}"
                        Command="{Binding ConfirmCashPaymentCommand}"
                        Background="#4CAF50" Foreground="White" 
                        FontWeight="Bold" Padding="10" Margin="0,5,0,0"
                        Name="ConfirmCashPaymentButton"/>
            </StackPanel>
        </Border>
        
        <!-- Payment Status -->
        <Border Grid.Row="4" Background="#FFF3E0" CornerRadius="8" Padding="10" Margin="0,0,0,15">
            <TextBlock Text="{Binding PaymentStatusText}" FontSize="12" HorizontalAlignment="Center" 
                       FontStyle="Italic" Foreground="#E65100"/>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Height="30" Margin="0,0,10,0" 
                    Click="Cancel_Click" Background="#F5F5F5"/>
        </StackPanel>
    </Grid>
</Window> 