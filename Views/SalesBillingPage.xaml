<UserControl x:Class="VillageSmartPOS.Views.SalesBillingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:VillageSmartPOS.ViewModels"
             xmlns:converters="clr-namespace:VillageSmartPOS.Converters"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="{DynamicResource PrimaryBackground}"
             KeyDown="SalesBillingPage_KeyDown">

    <UserControl.DataContext>
        <vm:SalesBillingViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Converters -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:SearchSuggestionsVisibilityConverter x:Key="SearchSuggestionsVisibilityConverter"/>
        

        

        

        
        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Simple TextBox Style -->
        <Style x:Key="SimpleTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource InputBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Modern Square Button Style -->
        <Style x:Key="ModernSquareButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <StackPanel HorizontalAlignment="Center" 
                                        VerticalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Tag}" 
                                           FontSize="24" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="{TemplateBinding Content}" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#2196F3" BlurRadius="10" ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Bill Summary Button Style -->
        <Style x:Key="BillSummaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#2196F3" BlurRadius="8" ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Square Button Style -->
        <Style x:Key="SuccessSquareButton" TargetType="Button" BasedOn="{StaticResource ModernSquareButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#4CAF50" BlurRadius="10" ShadowDepth="2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E7D32"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Suggestion Button Style -->
        <Style x:Key="SuggestionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F8FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Warning Square Button Style -->
        <Style x:Key="WarningSquareButton" TargetType="Button" BasedOn="{StaticResource ModernSquareButton}">
            <Setter Property="Background" Value="#FF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FF9800" BlurRadius="10" ShadowDepth="2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E65100"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Square Button Style -->
        <Style x:Key="DangerSquareButton" TargetType="Button" BasedOn="{StaticResource ModernSquareButton}">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <TextBlock Text="{TemplateBinding Content}" 
                                       FontSize="16"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D32F2F"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#F44336" BlurRadius="10" ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#B71C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Simple DataGrid Style -->
        <Style x:Key="SimpleDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="{DynamicResource BillItemBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource InputBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource SecondaryBackground}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGrid">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Focusable="False">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enhanced Column Header Style -->
        <Style x:Key="EnhancedColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource BillItemHeaderBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enhanced DataGrid Row Style -->
        <Style x:Key="EnhancedDataGridRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="{DynamicResource BillItemBackground}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridRow">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="0,0,0,1">
                            <DataGridCellsPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BillItemHoverBackground}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="#BBDEFB"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enhanced DataGrid Cell Style -->
        <Style x:Key="EnhancedDataGridCell" TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Padding" Value="0,3,0,3"/>
        </Style>
    </UserControl.Resources>

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="🛒 Sales Billing" FontSize="18" FontWeight="Bold" 
                   Foreground="#2196F3" Margin="0,0,0,10"/>

        <!-- Product Input Section -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="300"/>
                <ColumnDefinition Width="*" MinWidth="120"/>
                <ColumnDefinition Width="*" MinWidth="120"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                <TextBlock Text="{DynamicResource SearchProducts}" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#666"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBox Grid.Row="0" Style="{StaticResource SimpleTextBox}"
                             Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Enter product name or barcode (Press Enter to add, ↑↓ Arrow keys to navigate suggestions)"
                             FontSize="16"
                             Height="45"
                             x:Name="SearchTextBox"
                             KeyDown="SearchTextBox_KeyDown"
                             PreviewKeyDown="SearchTextBox_PreviewKeyDown"
                             TextChanged="SearchTextBox_TextChanged"
                             GotFocus="SearchTextBox_GotFocus"
                             PreviewMouseDown="SearchTextBox_PreviewMouseDown"/>
                    
                    <!-- Search Suggestions Dropdown -->
                    <Border Grid.Row="1" Background="White" BorderBrush="#DDD" BorderThickness="1" 
                            CornerRadius="4" MaxHeight="200" Margin="0,2,0,0"
                            x:Name="SuggestionsBorder"
                            IsVisibleChanged="SuggestionsBorder_IsVisibleChanged">
                        <Border.Visibility>
                            <MultiBinding Converter="{StaticResource SearchSuggestionsVisibilityConverter}">
                                <Binding Path="SearchTerm"/>
                                <Binding Path="SearchSuggestions.Count"/>
                            </MultiBinding>
                        </Border.Visibility>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200" x:Name="SuggestionsScrollViewer">
                            <ItemsControl ItemsSource="{Binding SearchSuggestions}" x:Name="SuggestionsItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource SuggestionButtonStyle}"
                                                Command="{Binding DataContext.SelectProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Margin="2"
                                                x:Name="SuggestionButton"
                                                PreviewKeyDown="SuggestionButton_PreviewKeyDown">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Name}" 
                                                           FontWeight="SemiBold" TextWrapping="Wrap" 
                                                           HorizontalAlignment="Left"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Price, StringFormat='Rs. {0:F2}'}" 
                                                           Foreground="{DynamicResource SuccessButton}" FontWeight="Bold" 
                                                           Margin="10,0,0,0" HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="0,0,15,0">
                <TextBlock Text="{DynamicResource QuantityWeight}" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource SecondaryText}"/>
                <TextBox Style="{StaticResource SimpleTextBox}"
                         Text="{Binding QuantityText, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Enter quantity (e.g., 5) or weight (e.g., 0.5 for 500g, 1.5 for 1.5kg)"
                         FontSize="16"
                         Height="45"
                         x:Name="QuantityTextBox"
                         KeyDown="QuantityTextBox_KeyDown"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="0,0,15,0">
                <TextBlock Text="{DynamicResource Price}" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource SecondaryText}"/>
                <TextBox Style="{StaticResource SimpleTextBox}"
                         Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Product price (can be modified for special pricing)"
                         FontSize="16"
                         Height="45"
                         IsReadOnly="False"/>
            </StackPanel>

            <StackPanel Grid.Column="3" VerticalAlignment="Bottom">
                <Button Content="{DynamicResource AddToBill}" 
                        Style="{StaticResource BillSummaryButton}"
                        Background="{DynamicResource SuccessButton}"
                        Command="{Binding AddToBillCommand}"
                        Height="45"
                        Width="120"/>
            </StackPanel>
        </Grid>

        <!-- Manual Product Entry Section -->
        <Border Grid.Row="2" Background="{DynamicResource CardBackground}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Section Header -->
                <TextBlock Grid.Row="0" Text="✏️ Manual Product Entry" FontSize="14" FontWeight="Bold" 
                           Foreground="{DynamicResource PrimaryText}" Margin="0,0,0,10"/>
                
                <!-- Manual Entry Fields -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" MinWidth="200"/>
                        <ColumnDefinition Width="*" MinWidth="120"/>
                        <ColumnDefinition Width="*" MinWidth="100"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Product Name -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Product Name" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#666"/>
                        <TextBox Style="{StaticResource SimpleTextBox}"
                                 Text="{Binding ManualProductName, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Enter product name manually"
                                 FontSize="14"
                                 Height="40"
                                 x:Name="ManualProductNameTextBox"
                                 KeyDown="ManualProductNameTextBox_KeyDown"/>
                    </StackPanel>

                    <!-- Price -->
                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Price (Rs.)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#666"/>
                        <TextBox Style="{StaticResource SimpleTextBox}"
                                 Text="{Binding ManualProductPrice, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Enter price manually"
                                 FontSize="14"
                                 Height="40"
                                 x:Name="ManualProductPriceTextBox"
                                 KeyDown="ManualProductPriceTextBox_KeyDown"/>
                    </StackPanel>

                    <!-- Quantity -->
                    <StackPanel Grid.Column="2" Margin="0,0,10,0">
                        <TextBlock Text="Quantity" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#666"/>
                        <TextBox Style="{StaticResource SimpleTextBox}"
                                 Text="{Binding ManualProductQuantity, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Enter quantity (default: 1)"
                                 FontSize="14"
                                 Height="40"
                                 x:Name="ManualProductQuantityTextBox"
                                 KeyDown="ManualProductQuantityTextBox_KeyDown"/>
                    </StackPanel>

                    <!-- Add Button -->
                    <StackPanel Grid.Column="3" VerticalAlignment="Bottom">
                        <Button Content="Add Manual" 
                                Style="{StaticResource BillSummaryButton}"
                                Background="{DynamicResource InfoButton}"
                                Command="{Binding AddManualProductCommand}"
                                Height="40"
                                Width="100"
                                x:Name="AddManualProductButton"
                                KeyDown="AddManualProductButton_KeyDown"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Status Message -->
        <Border Grid.Row="3" Background="{DynamicResource PrimaryButton}" BorderBrush="{DynamicResource PrimaryButton}" BorderThickness="1" 
                CornerRadius="6" Margin="0,0,0,10" Padding="8,6" 
                Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="White" 
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Bill Items DataGrid -->
        <Grid Grid.Row="4" Margin="0,0,0,20" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="📋 Bill Items" 
                       Style="{StaticResource SectionHeaderStyle}"/>

            <DataGrid Grid.Row="1" 
                      Style="{StaticResource SimpleDataGrid}"
                      ItemsSource="{Binding BillItems}"
                      VerticalAlignment="Stretch"
                      RowStyle="{StaticResource EnhancedDataGridRow}"
                      CellStyle="{StaticResource EnhancedDataGridCell}"
                      BorderBrush="{DynamicResource BorderColor}"
                      BorderThickness="1">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource EnhancedColumnHeader}"/>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource Name}" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="{DynamicResource Barcode}" Binding="{Binding Barcode}" Width="1.2*"/>
                    <DataGridTextColumn Header="{DynamicResource Price}" Binding="{Binding Price, StringFormat='Rs. {0:F2}'}" Width="1*"/>
                                                    <DataGridTextColumn Header="Qty/Wt" Binding="{Binding FormattedQuantity}" Width="0.8*"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat='Rs. {0:F2}'}" Width="1*"/>
                    <DataGridTemplateColumn Header="Action" Width="1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="❌" 
                                        Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource DangerSquareButton}"
                                        FontSize="16"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Bill Summary and Action Buttons -->
        <Border Grid.Row="5" Background="{DynamicResource SecondaryBackground}" CornerRadius="8" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Bill Summary -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{DynamicResource BillSummary}" FontSize="14" FontWeight="Bold" 
                           Foreground="{DynamicResource PrimaryText}" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{DynamicResource Items}" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryText}" FontSize="12"/>
                    <TextBlock Text="{Binding BillItems.Count}" FontWeight="Bold" Foreground="{DynamicResource PrimaryButton}" FontSize="12"/>
                    <TextBlock Text=" | Total" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryText}" Margin="15,0,0,0" FontSize="12"/>
                    <TextBlock Text="{Binding TotalAmount, StringFormat='Rs. {0:F2}'}" FontSize="16" FontWeight="Bold" 
                               Foreground="{DynamicResource SuccessButton}"/>
                </StackPanel>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0,0,0" VerticalAlignment="Center">
                    <Button Content="🗑️ Clear Bill" 
                            Style="{StaticResource BillSummaryButton}"
                            Background="{DynamicResource DangerButton}"
                            Command="{Binding ClearBillCommand}"
                            Margin="0,0,12,0"
                            MinWidth="120"
                            Height="45"/>
                    
                    <Button Content="🖨️ Print Receipt" 
                            Style="{StaticResource NavigationButton}"
                            Background="{DynamicResource WarningButton}"
                            Command="{Binding PrintCommand}"
                            MinWidth="140"
                            Height="45"
                            x:Name="PrintReceiptButton"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
