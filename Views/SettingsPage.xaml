<UserControl x:Class="VillageSmartPOS.Views.SettingsPage"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                         xmlns:vm="clr-namespace:VillageSmartPOS.ViewModels"
                         mc:Ignorable="d" 
                         d:DesignHeight="600" d:DesignWidth="800"
                         Background="{DynamicResource PrimaryBackground}">
    
    <UserControl.DataContext>
        <vm:SettingsViewModel />
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryButton}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Setting Item Style -->
        <Style x:Key="SettingItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource InputBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource InputBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="SettingsButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <StackPanel Margin="20" MinWidth="600">
            <!-- Header -->
            <TextBlock Text="âš™ï¸ Settings" 
                       Style="{StaticResource SectionHeaderStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Theme Selection -->
            <Border Style="{StaticResource SettingItemStyle}">
                <StackPanel>
                                            <TextBlock Text="ðŸŽ¨ Theme Settings" 
                                   Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Theme:" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource PrimaryText}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                  Style="{StaticResource ModernComboBox}"
                                  x:Name="ThemeComboBox"
                                  SelectionChanged="ThemeComboBox_SelectionChanged">
                                                    <ComboBoxItem Content="Light Theme" Tag="Light"/>
                        <ComboBoxItem Content="Dark Theme" Tag="Dark"/>
                        </ComboBox>

                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Language:" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource PrimaryText}"
                                   VerticalAlignment="Center"
                                   Margin="0,20,20,0"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                  Style="{StaticResource ModernComboBox}"
                                  x:Name="LanguageComboBox"
                                  SelectionChanged="LanguageComboBox_SelectionChanged"
                                  Margin="0,20,0,0">
                                                    <ComboBoxItem Content="English" Tag="English"/>
                        <ComboBoxItem Content="à·ƒà·’à¶‚à·„à¶½" Tag="Sinhala"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- POS System Settings -->
            <Border Style="{StaticResource SettingItemStyle}">
                <StackPanel>
                    <TextBlock Text="ðŸª Bill Customization Settings" 
                               Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Grocery Name -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="ðŸª Grocery Name:" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource PrimaryText}"
                                       Margin="0,0,0,5"/>
                            <TextBox Style="{StaticResource ModernTextBox}"
                                     x:Name="GroceryNameTextBox"
                                     Text="{Binding GroceryName, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Logo Text -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="ðŸ·ï¸ Logo Text:" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource PrimaryText}"
                                       Margin="0,0,0,5"/>
                            <TextBox Style="{StaticResource ModernTextBox}"
                                     x:Name="LogoTextTextBox"
                                     Text="{Binding LogoText, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Store Address -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,20,0,0">
                            <TextBlock Text="ðŸ“ Store Address:" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource PrimaryText}"
                                       Margin="0,0,0,5"/>
                            <TextBox Style="{StaticResource ModernTextBox}"
                                     x:Name="StoreAddressTextBox"
                                     Text="{Binding StoreAddress, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Phone Number 1 -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,20,10,0">
                            <TextBlock Text="ðŸ“ž Primary Phone:" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource PrimaryText}"
                                       Margin="0,0,0,5"/>
                            <TextBox Style="{StaticResource ModernTextBox}"
                                     x:Name="PhoneNumber1TextBox"
                                     Text="{Binding PhoneNumber1, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Phone Number 2 -->
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,20,0,0">
                            <TextBlock Text="ðŸ“ž Secondary Phone:" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource PrimaryText}"
                                       Margin="0,0,0,5"/>
                            <TextBox Style="{StaticResource ModernTextBox}"
                                     x:Name="PhoneNumber2TextBox"
                                     Text="{Binding PhoneNumber2, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Cashier Name -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,20,10,0">
                            <TextBlock Text="ðŸ‘¤ Cashier Name:" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource PrimaryText}"
                                       Margin="0,0,0,5"/>
                            <TextBox Style="{StaticResource ModernTextBox}"
                                     x:Name="CashierNameTextBox"
                                     Text="{Binding CashierName, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Currency Symbol -->
                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,20,0,0">
                            <TextBlock Text="ðŸ’° Currency Symbol:" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource PrimaryText}"
                                       Margin="0,0,0,5"/>
                            <TextBox Style="{StaticResource ModernTextBox}"
                                     x:Name="CurrencySymbolTextBox"
                                     Text="{Binding CurrencySymbol, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Receipt Header -->
                        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,20,0,0">
                            <TextBlock Text="ðŸ“„ Receipt Header:" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource PrimaryText}"
                                       Margin="0,0,0,5"/>
                            <TextBox Style="{StaticResource ModernTextBox}"
                                     x:Name="ReceiptHeaderTextBox"
                                     Text="{Binding ReceiptHeader, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Receipt Footer -->
                        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,20,0,0">
                            <TextBlock Text="ðŸ“„ Receipt Footer:" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource PrimaryText}"
                                       Margin="0,0,0,5"/>
                            <TextBox Style="{StaticResource ModernTextBox}"
                                     x:Name="ReceiptFooterTextBox"
                                     Text="{Binding ReceiptFooter, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Save Bill Settings Button -->
                    <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,30,0,0">
                        <Button Content="ðŸ’¾ Save Bill Settings to Database" 
                                Style="{StaticResource SettingsButton}"
                                Background="#4CAF50"
                                Click="SaveBillSettings_Click"
                                HorizontalAlignment="Center"
                                MinWidth="250"/>
                        <TextBlock Text="Click this button to save all bill customization settings to the database" 
                                   Foreground="{DynamicResource SecondaryText}"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- General Settings -->
            <Border Style="{StaticResource SettingItemStyle}">
                <StackPanel>
                                            <TextBlock Text="ðŸ”§ General Settings" 
                                   Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <StackPanel Margin="0,10">
                                                <CheckBox Content="Auto-print receipts" 
                                   Style="{StaticResource ModernCheckBox}"
                                   x:Name="AutoPrintCheckBox"
                                   Checked="AutoPrintCheckBox_Changed"
                                   Unchecked="AutoPrintCheckBox_Changed"/>
                        
                        <CheckBox Content="Show stock warnings" 
                                   Style="{StaticResource ModernCheckBox}"
                                   x:Name="StockWarningsCheckBox"
                                   Checked="StockWarningsCheckBox_Changed"
                                   Unchecked="StockWarningsCheckBox_Changed"/>
                        
                        <CheckBox Content="Enable sound notifications" 
                                   Style="{StaticResource ModernCheckBox}"
                                   x:Name="SoundNotificationsCheckBox"
                                   Checked="SoundNotificationsCheckBox_Changed"
                                   Unchecked="SoundNotificationsCheckBox_Changed"/>
                        
                        <CheckBox Content="Auto-save bills" 
                                   Style="{StaticResource ModernCheckBox}"
                                   x:Name="AutoSaveBillsCheckBox"
                                   Checked="AutoSaveBillsCheckBox_Changed"
                                   Unchecked="AutoSaveBillsCheckBox_Changed"/>
                        
                        <CheckBox Content="Show product images" 
                                   Style="{StaticResource ModernCheckBox}"
                                   x:Name="ShowProductImagesCheckBox"
                                   Checked="ShowProductImagesCheckBox_Changed"
                                   Unchecked="ShowProductImagesCheckBox_Changed"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Printer Settings -->
            <Border Style="{StaticResource SettingItemStyle}">
                <StackPanel>
                    <TextBlock Text="ðŸ–¨ï¸ Printer Settings" 
                               Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Default Printer:" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource PrimaryText}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                  Style="{StaticResource ModernComboBox}"
                                  x:Name="DefaultPrinterComboBox"
                                  ItemsSource="{Binding AvailablePrinters}"
                                  SelectedItem="{Binding DefaultPrinter, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="ðŸ’¡ Tip: Select your thermal printer (like POS-80) for automatic receipt printing" 
                                   Foreground="{DynamicResource SecondaryText}"
                                   FontSize="12"
                                   Margin="0,15,0,0"
                                   TextWrapping="Wrap"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,30,0,0">
                <Button Content="ðŸ’¾ Save Settings" 
                        Style="{StaticResource SettingsButton}"
                        Click="SaveSettings_Click"
                        Margin="0,0,10,0"/>
                
                <Button Content="ðŸ”„ Reset to Default" 
                        Style="{StaticResource SettingsButton}"
                        Background="#FF9800"
                        Click="ResetSettings_Click"
                        Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl> 