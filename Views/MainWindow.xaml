<Window x:Class="VillageSmartPOS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:VillageSmartPOS.ViewModels"
        mc:Ignorable="d"
        Title="VillageSmart POS" Height="800" Width="1200"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource PrimaryBackground}">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Card Shadow Effect -->
        <DropShadowEffect x:Key="CardShadow" Color="#CCCCCC" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
        
        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Square Button Style -->
        <Style x:Key="ModernSquareButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MinHeight" Value="80"/>
            <Setter Property="MaxWidth" Value="120"/>
            <Setter Property="MaxHeight" Value="120"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <StackPanel HorizontalAlignment="Center" 
                                        VerticalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Tag}" 
                                           FontSize="20" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="{TemplateBinding Content}" 
                                           FontSize="10" 
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#2196F3" BlurRadius="10" ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Square Button Style -->
        <Style x:Key="SuccessSquareButton" TargetType="Button" BasedOn="{StaticResource ModernSquareButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#4CAF50" BlurRadius="10" ShadowDepth="2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E7D32"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Warning Square Button Style -->
        <Style x:Key="WarningSquareButton" TargetType="Button" BasedOn="{StaticResource ModernSquareButton}">
            <Setter Property="Background" Value="#FF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FF9800" BlurRadius="10" ShadowDepth="2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E65100"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Info Square Button Style -->
        <Style x:Key="InfoSquareButton" TargetType="Button" BasedOn="{StaticResource ModernSquareButton}">
            <Setter Property="Background" Value="#9C27B0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7B1FA2"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#9C27B0" BlurRadius="10" ShadowDepth="2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4A148C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Square Button Style -->
        <Style x:Key="DangerSquareButton" TargetType="Button" BasedOn="{StaticResource ModernSquareButton}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#F44336" BlurRadius="10" ShadowDepth="2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" MinWidth="800"/>
            <ColumnDefinition Width="*" MinWidth="200" MaxWidth="300"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side: Main Content Area -->
        <Grid Grid.Column="0" Margin="10,10,5,10" VerticalAlignment="Stretch">
            <ContentControl x:Name="MainContentControl" Content="{Binding CurrentView}" 
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch"
                          Margin="20,20,10,20"/>
        </Grid>
        
        <!-- Right Side: Navigation Buttons -->
        <Border Grid.Column="1" Margin="5,10,10,10" VerticalAlignment="Stretch"
                Background="{DynamicResource CardBackground}" CornerRadius="12" Padding="15">
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource ShadowColor}" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Navigation" FontSize="16" FontWeight="Bold" 
                               Foreground="{DynamicResource PrimaryText}" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                    <!-- Navigation Buttons Grid - Responsive Layout -->
                    <UniformGrid Columns="2" Rows="6">
                        <!-- Sales Billing Button -->
                        <Button Content="{DynamicResource NavSalesBilling}" 
                                Tag="🛒"
                                Style="{StaticResource SuccessSquareButton}"
                                Command="{Binding NavigateToSalesBillingCommand}"
                                Margin="2"/>

                        <!-- Add Product Button -->
                        <Button Content="Add Product" 
                                Tag="➕"
                                Style="{StaticResource WarningSquareButton}"
                                Command="{Binding NavigateToAddProductCommand}"
                                Margin="2"/>

                        <!-- Inventory Button -->
                        <Button Content="{DynamicResource NavInventory}" 
                                Tag="📦"
                                Style="{StaticResource InfoSquareButton}"
                                Command="{Binding NavigateToInventoryCommand}"
                                Margin="2"/>

                        <!-- Loan Customers Button -->
                        <Button Content="{DynamicResource NavLoanCustomers}" 
                                Tag="💳"
                                Style="{StaticResource DangerSquareButton}"
                                Command="{Binding NavigateToLoanCustomersCommand}"
                                Margin="2"/>

                        <!-- Reports Button (Dummy) -->
                        <Button Content="{DynamicResource NavReports}" 
                                Tag="📊"
                                Style="{StaticResource InfoSquareButton}"
                                IsEnabled="False"
                                Opacity="0.5"
                                Margin="2"/>

                        <!-- Settings Button -->
                        <Button Content="{DynamicResource NavSettings}" 
                                Tag="⚙️"
                                Style="{StaticResource WarningSquareButton}"
                                Command="{Binding NavigateToSettingsCommand}"
                                Margin="2"/>

                        <!-- Analytics Button (Dummy) -->
                        <Button Content="{DynamicResource NavAnalytics}" 
                                Tag="📈"
                                Style="{StaticResource SuccessSquareButton}"
                                IsEnabled="False"
                                Opacity="0.5"
                                Margin="2"/>

                        <!-- Backup Button (Dummy) -->
                        <Button Content="{DynamicResource NavBackup}" 
                                Tag="💾"
                                Style="{StaticResource DangerSquareButton}"
                                IsEnabled="False"
                                Opacity="0.5"
                                Margin="2"/>

                        <!-- Users Button (Dummy) -->
                        <Button Content="{DynamicResource NavUsers}" 
                                Tag="👥"
                                Style="{StaticResource InfoSquareButton}"
                                IsEnabled="False"
                                Opacity="0.5"
                                Margin="2"/>

                        <!-- Help Button (Dummy) -->
                        <Button Content="{DynamicResource NavHelp}" 
                                Tag="❓"
                                Style="{StaticResource WarningSquareButton}"
                                IsEnabled="False"
                                Opacity="0.5"
                                Margin="2"/>

                        <!-- Logs Button (Dummy) -->
                        <Button Content="{DynamicResource NavLogs}" 
                                Tag="📋"
                                Style="{StaticResource DangerSquareButton}"
                                IsEnabled="False"
                                Opacity="0.5"
                                Margin="2"/>

                        <!-- About Button (Dummy) -->
                        <Button Content="{DynamicResource NavAbout}" 
                                Tag="ℹ️"
                                Style="{StaticResource SuccessSquareButton}"
                                IsEnabled="False"
                                Opacity="0.5"
                                Margin="2"/>
                    </UniformGrid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
